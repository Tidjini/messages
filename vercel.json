{
    "version": 2,
    "builds": [
      {
        "src": "config/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
      },
      {
        "src": "build.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "static"
        }
      }
    ],
    "routes": [
      {
        "source": "/static/(.*)",
        "destination": "/static/$1"
      },
      {
        "source": "/(.*)",
        "destination": "config/wsgi.py"
      }
    ]
  }